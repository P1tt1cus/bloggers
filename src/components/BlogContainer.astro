---
import Header from './Header.astro';
import Footer from './Footer.astro';
import PostList from './PostList.astro';
import PostContent from './PostContent.astro';
import WhichKey from './WhichKey.astro';
import Search from './Search.astro';

interface Props {
    posts: any[];
}

const { posts } = Astro.props;
---

<div class="nvim-container">
    <Header />
    <main>
        <div class="line-numbers-container">
            <div class="line-numbers" id="line-numbers"></div>
        </div>
        <div class="content">
            <PostList posts={posts} />
            <PostContent />
        </div>
    </main>
    <Footer />
    <WhichKey />
    <Search />
</div>

<style>
    .nvim-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background: var(--nvim-bg);
        color: var(--nvim-fg);
        font-family: 'JetBrains Mono', monospace;
    }

    main {
        flex: 1;
        display: flex;
        padding: 1rem 0 1rem 0.5rem;
        gap: 0.25rem;
        max-width: 2000px;
        margin: 0 auto;
        width: 100%;
        position: relative;
    }

    .line-numbers-container {
        position: sticky;
        top: 0;
        height: 100%;
        min-width: 2.5rem;
    }

    .line-numbers {
        color: var(--nvim-gray);
        text-align: right;
        padding-right: 0.5rem;
        border-right: 1px solid var(--nvim-gray);
        user-select: none;
        font-size: 0.9rem;
        display: flex;
        flex-direction: column;
    }

    .line-numbers div {
        height: 24px;
        line-height: 24px;
    }

    .content {
        flex: 1;
        line-height: 24px;
        font-size: 1rem;
        padding-left: 0.5rem;
        padding-right: 1rem;
    }
</style>

<script>
    import '../scripts/blog';
</script>