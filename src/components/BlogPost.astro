---
interface Props {
    title: string;
    date: string;
    slug: string;
    description: string;
    content?: string;
    isExternal?: boolean;
}

const { title, date, slug, description, content, isExternal } = Astro.props;
const linkUrl = isExternal ? `/bloggers/blog/${slug}.html` : `/bloggers/blog/${slug}`;
const externalString = isExternal ? 'true' : 'false';
---

<article 
    class="blog-post" 
    data-title={title}
    data-date={date}
    data-content={content}
    data-slug={slug}
    data-external={externalString}
    data-link-url={linkUrl}
>
    <div class="post-header">
        <span class="line-start">~</span>
        <span class="post-title">{title}</span>
        {isExternal && <span class="external-indicator">[HTML]</span>}
    </div>
    <div class="post-meta">
        <span class="date">{date}</span>
        <p class="description">" {description}</p>
    </div>
</article>

<style>
    .blog-post {
        margin-bottom: 1.5rem;
        padding: 0.5rem;
        border-radius: 4px;
        cursor: pointer;
    }
    .blog-post:hover {
        background: var(--nvim-dark);
    }
    .post-header {
        display: flex;
        gap: 1rem;
        align-items: center;
        font-size: 1.1rem;
        height: 24px;
    }
    .line-start {
        color: var(--nvim-green);
        font-weight: 600;
    }
    .post-title {
        color: var(--nvim-blue);
    }
    .external-indicator {
        color: var(--nvim-green);
        font-size: 0.8rem;
        margin-left: 0.5rem;
    }
    .date {
        color: var(--nvim-gray);
        font-size: 0.9rem;
    }
    .description {
        color: var(--nvim-gray);
        margin-top: 0.3rem;
        margin-left: 1.5rem;
        font-size: 0.9rem;
        font-style: italic;
        height: 24px;
    }
</style>